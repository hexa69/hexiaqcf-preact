{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "DOM",
      "ES2021"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "react": [
        "./node_modules/preact/compat/"
      ],
      "react-dom": [
        "./node_modules/preact/compat/"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
  }
}